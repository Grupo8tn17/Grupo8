<%- include('partials/painelAdmin-cabecalho') %>


        <div class="content-products">
            <div class="container-products">
                <% if (marcas) { %>
                <h3>Editar Marcas</h3>
                <% } else { %>    
                <h3>Adicionar Marca</h3>
                <% } %>
  
                <% if (marcas) { %>
                    <form  action="/admin/marcas/editar/<%= marcas.idmarcas %>?_method=PUT" method="POST" id="form">
                <% } else { %>
                <form  action="/admin/marcas/adiciona" method="POST" id="form">
                <% } %>
                    <div class="box">
                        <div class="box-header">
                            <h4 class="box-title">Nova Marca</h4>
                            <div class="box-tools">
                                <input type="submit" value="Salvar">
                            </div>
                        </div>
                        <div class="box-body">

                            <div class="form-group">
                                <label for="p_name">Nome da Marca</label>
                                <input  type="text" id="p_name" name="nome" value="<%= marcas?.nome %>" />
                            </div>
                            <div class="form-group">
                                <label for="p_name">CNPJ</label>
                                <input  type="number" id="p_name" name="cnpj" value="<%= marcas?.cnpj %>"/>
                            </div>
                            <div class="form-group">
                                <label for="p_name">Endere√ßo</label>
                                <input  type="text" id="p_name" name="endereco" value="<%= marcas?.endereco %>"/>
                            </div>
                        </div>
                    </div>
                </form>
            
            </div>
        </div>
    </main>
</body>
</html>