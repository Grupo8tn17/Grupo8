<%- include('partials/header') %>


  <main>

    <div id="login">
      <h1>Registre-se</h1>
      <hr />
    </div>



    <section id="container-login">

      <div id="first-login">
        <h2>LOGIN</h2>


        <form action="/user/user-panel">

          <div class="input">
            <label for="email"></label>
            <input type="email" id="email" name="email" placeholder="E-mail" />
          </div>

          <div class="input">
            <label for="pwd"></label>
            <input type="password" id="pwd" name="pwd" placeholder="Senha" />
          </div>
          <div class="first-login-buttom">
            <p>
              <a href="">Esqueci minha senha?</a>
            </p>


            <button type="submit" id="enter">Entrar</button>
          </div>
        </form>
      </div>

      <div id="second-login">

        <div id="buttonGoogle">
          <button type="submit"><img src="images/simbolGoogle.png" alt="Google">Continuar com o
            Google</button><br />
        </div>

        <div id="buttonRegister">
          <a href="/registrate"><button type="submit">Clique e cadastre-se</button></a>
        </div>

        <aside id="desc">
          <p>Cadastre-se em nosso site e ganhe</br>
            <strong>10% de desconto</strong> na sua primeira compra!
          </p>
        </aside>

      </div>

    </section>

  </main>

  <%- include('partials/alternative-footer') %>