<%- include('partials/painelAdmin-cabecalho') %>


        <div class="content-products">
            <div class="container-products">
                <h3>Editar Produtos</h3>

                <form  action="/admin/editar/<%= product.idprodutos %>?_method=PUT" method="POST" id="form" enctype="multipart/form-data">
                    <div class="box">
                        <div class="box-header">
                            <h4 class="box-title">Editar Produto</h4>
                            <div class="box-tools">
                                <input type="submit" value="Salvar">
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label for="p_name">Nome do produto</label>
                                <input  type="text" id="p_name" name="titulo" value="<%= product.titulo %> " />
                            </div>
            
                            <div class="form-group">
                                <label for="p_cat">Categoria</label>
                                <select  name="categoria" id="p_cat">
                                    <option value="" <% if (!product) { %>selected <% } %>></option>
                                  <% categorias.forEach(categoria => { %>
                                    <option
                                         value="<%= categoria.idcategorias %>" 
                                        <% if (product?.categorias_idcategorias == categoria.idcategorias) { %>selected <% } %>
                                    >
                                        <%= categoria.nome %>
                                    </option>
                                  <% }) %>
                                </select>
                            </div>
            
                            <div class="form-group">
                                <label for="p_marca">Marca</label>
                                <select  name="marca" id="p_marca">
                                    <option value="" <% if (!product) { %>selected <% } %>></option>
                                  <% marcas.forEach(marca => { %>
                                    <option
                                         value="<%= marca.idmarcas %>" 
                                        <% if (product?.marcas_idmarca == marca.idmarca) { %>selected <% } %>
                                    >
                                        <%= marca.nome %>
                                    </option>
                                  <% }) %>
                                </select>
                            </div>
            
                            <div class="form-group">
                                <label for="p_description">Descrição do Produto</label>
                                <textarea id="p_description" name="descricao" ><%= product.descricao %> </textarea>
                            </div>
            
                            <div class="form-group">
                                <label for="p_stock">Estoque Disponível</label>
                                <input type="number" id="p_stock" name="quantidade" value="<%= product.quantidade %>" />
                            </div>
            
                            <div class="form-group">
                                <label for="p_price">Preço</label>
                                <input  type="text"  id="p_price" name="valor" value="<%= product.valor %>"/>
                            </div>                           

                        </div>
                    </div>
                </form>

            </div>
        </div>
    </main>
</body>
</html>