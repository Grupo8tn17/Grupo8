<%- include('partials/painelAdmin-cabecalho') %>

        <div class="content">
            <div class="container">
                <h3>Usuários</h3>
                <div class="box-header">
                    <h4 class="box-title">Usuários</h3>
                    <div class="box-tools">
                        <a href="/admin/usuarios/formulario">Adicionar</a>
                    </div>
                </div>
                <div class="box-body">
                    <table class="box-table">
                        <tr>
                            <th class="table-id">ID</th>
                            <th class="table-name">Nome do Usuario</th>
                            <th class="table-action">Ações</th>
                        </tr>
                        <tr>
                            <% for (let usuario of usuarios) { %>
                            <td class="table-id"><%= usuario.idusuarios %></td>
                            <td class="table-name"><%= usuario.nome %></td>
                            <td class="table-action">
                                <a class="action-edit" href="/admin/usuarios/editar/<%= usuario.idusuarios %>">Editar</a>
                                <form  action="/admin/usuarios/excluir/<%= usuario.idusuarios %>?_method=DELETE" method="POST" id="form">
                                <button class="action-delete">Excluir</button>
                                </form>                           
                            </td>
                        </tr>
                        <% } %>
                    </table>
                </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>